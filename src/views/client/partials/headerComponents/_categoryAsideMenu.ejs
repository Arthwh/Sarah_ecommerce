<!-- Menu Lateral (Categorias) -->
<div id="categoriesOverlay" class="hidden fixed inset-0 bg-black bg-opacity-20 z-997" onclick="closeCategoriesMenu()">
</div>
<aside id="category-aside-menu"
    class="hidden fixed inset-0 top-0 left-0 w-full sm:w-72 h-full bg-black text-white transition-transform transform z-998">

    <!-- Menu Principal -->
    <div id="menuContainer" class="fixed top-0 left-0 p-6 w-full">
        <button onclick="toggleCategoryAsideMenu()" class="text-right w-full">
            <img src="/public/images/icons/close_icon_white.svg" alt="closeButton" class="w-8 h-8">
        </button>
        <ul class="mt-10 space-y-4 w-full">
            <% data.page.categories.forEach(category=> { %>
                <li class="flex pl-2">
                    <button class="menuItem category" onclick="toggleSubmenu('<%= category.name %>Submenu')">
                        <%= category.name %>
                    </button>
                    <img class="h-6 w-6 ml-auto arrow" src="/public/images/icons/arrow_right_icon_white.svg"
                        alt="Arrow right white">
                </li>
                <% }) %>
                    <li class="sm:hidden pl-2">
                        <a href="/novidades" class="menuItem category">Novidades</a>
                    </li>
                    <li class="sm:hidden pl-2">
                        <a href="/mais-vendidos" class="menuItem category">Mais Vendidos</a>
                    </li>
                    <li class="sm:hidden pl-2">
                        <a href="/promocoes" class="menuItem category">Promoções</a>
                    </li>
        </ul>
    </div>

    <!-- Submenu -->
    <div id="submenuContainer" class="hidden bg-black p-6 fixed top-0 left-0 w-full h-full z-999">
        <button onclick="toggleSubmenu()" class="text-left w-full pl-2">
            <img src="/public/images/icons/arrow_back_icon_white.svg" alt="backButton" class="w-8 h-8">
        </button>

        <% data.page.categories.forEach(category=> { %>
            <ul id="<%= category.name %>Submenu" class="hidden mt-10 space-y-4">
                <li class="pl-2">
                    <a href="/<%= category.name.toLowerCase() %>" class="categoryMenuItemGetAll">
                        Ver tudo
                    </a>
                </li>
                <% category.subcategories.forEach(subcategory=> { %>
                    <li class="pl-2">
                        <a href="/<%= category.name.toLowerCase() %>/<%= subcategory.name.toLowerCase() %>"
                            class="menuItem">
                            <%= subcategory.name %>
                        </a>
                    </li>
                    <% }) %>
            </ul>
            <% }) %>
    </div>
</aside>