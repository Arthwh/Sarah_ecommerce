<div id="loginRegisterModal" class="hidden fixed inset-0 flex items-center justify-center z-50">
    <!-- Overlay (fundo transparente escuro) -->
    <div onclick="toggleLoginModal()" class="fixed inset-0 bg-black bg-opacity-20"></div>

    <!-- Modal de Login -->
    <div id="loginModal"
        class="relative bg-white shadow-lg w-full max-w-md mx-auto z-10 max-h-1/2 md:h-auto h-fit md:max-h-1/2">
        <div class="bg-black text-white p-4 relative">
            <h2 class="text-xl font-semibold text-center textColorYellow">IDENTIFICAÇÃO</h2>
            <button onclick="toggleLoginModal()" class="absolute top-0 right-0 mt-3 pr-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        <!-- Formulário de Login -->
        <div class="p-10 overflow-y-auto h-full md:max-h-[70vh]">
            <form id="formLogin">
                <label for="loginEmail" class="block text-gray-700 mb-2">Email</label>
                <input type="text" name="loginEmail" id="loginEmail" placeholder="Digite seu email"
                    class="ring-black/20 w-full px-4 py-2 mb-4 border border-gray-300 rounded focus:outline-none focus:ring focus:border-black">
                <label for="loginPassword" class="block text-gray-700 mb-2">Senha</label>
                <input type="password" name="loginPassword" id="loginPassword" placeholder="Digite sua senha"
                    class="ring-black/20 w-full px-4 py-2 mb-4 border border-gray-300 rounded focus:outline-none focus:ring focus:border-black">
                <span id="loginError" class="error-message"></span>
                <button type="button" type="button" onclick="login()"
                    class="w-full bg-black text-white py-2 mt-3 rounded hover:bg-gray-800 transition-colors">Entrar</button>
            </form>

            <a href="#" class="block text-right text-sm text-gray-500 mt-4 hover:text-black">Esqueci minha senha</a>
            <!-- Alternativa para Cadastro -->
            <div class="text-center py-6 border-t border-gray-200">
                <span class="block mb-4 text-sm font-medium text-gray-700">Ou</span>
                <button onclick="toggleRegisterModal()"
                    class="w-full bg-black text-white py-2 rounded hover:bg-gray-800 transition-colors">Quero me
                    cadastrar</button>
            </div>
        </div>
    </div>

    <!-- Modal de Cadastro -->
    <div id="registerModal"
        class="hidden relative bg-white shadow-lg w-full max-w-md mx-auto z-20 max-h-1/2 md:h-auto h-fit md:max-h-1/2">
        <div class="bg-black text-white p-4 relative">
            <button onclick="toggleRegisterModal()" class="absolute top-0 left-0 mt-3 pl-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
            </button>
            <h2 class="text-xl font-semibold text-center textColorYellow">CADASTRO</h2>
            <button onclick="toggleLoginModal()" class="absolute top-0 right-0 mt-3 pr-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        <!-- Formulário de Cadastro -->
        <div class="p-10 overflow-y-auto max-h-[70vh]">
            <form id="formRegister" action="/register" method="post">
                <label for="registerEmail" class="block text-gray-700 mb-2">Email</label>
                <input type="text" name="registerEmail" id="registerEmail" placeholder="Digite seu email"
                    class="ring-black/20 w-full px-4 py-2 mb-4 border border-gray-300 rounded focus:outline-none focus:ring focus:border-black">
                <span id="registerEmailError" class="error-message"></span>
                <label for="cpf" class="block text-gray-700 my-3">CPF</label>
                <input type="text" name="cpf" id="cpf" placeholder="Digite seu CPF"
                    class="ring-black/20 w-full px-4 py-2 mb-4 border border-gray-300 rounded focus:outline-none focus:ring focus:border-black">
                <span id="cpfError" class="error-message"></span>
                <label for="name" class="block text-gray-700 my-3">Nome</label>
                <input type="text" name="name" id="name" placeholder="Digite seu nome"
                    class="ring-black/20 w-full px-4 py-2 mb-4 border border-gray-300 rounded focus:outline-none focus:ring focus:border-black">
                <span id="nameError" class="error-message"></span>
                <label for="birthdate" class="block text-gray-700 my-3">Data de nascimento</label>
                <input type="date" name="birthdate" id="birthdate" placeholder="Digite sua data de nascimento"
                    class="ring-black/20 w-full px-4 py-2 mb-4 border border-gray-300 rounded focus:outline-none focus:ring focus:border-black">
                <span id="birthdateError" class="error-message"></span>
                <label for="phoneNumber" class="block text-gray-700 my-3">Telefone (DDD + Número)</label>
                <input type="text" name="phoneNumber" id="phoneNumber" placeholder="Digite seu telefone"
                    class="ring-black/20 w-full px-4 py-2 mb-4 border border-gray-300 rounded focus:outline-none focus:ring focus:border-black">
                <span id="phoneError" class="error-message"></span>
                <label for="registerPassword" class="block text-gray-700 my-3">Senha</label>
                <input type="password" name="registerPassword" id="registerPassword" placeholder="Digite sua senha"
                    class="ring-black/20 w-full px-4 py-2 mb-4 border border-gray-300 rounded focus:outline-none focus:ring focus:border-black">
                <span id="registerPasswordError" class="error-message"></span>
                <button type="submit"
                    class="w-full bg-black text-white py-2 mt-3 rounded hover:bg-gray-800 transition-colors">Cadastrar</button>
            </form>
        </div>
    </div>
</div>